<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MD3.CreatePages.CreateStudent"
             Title="CreateStudent">
    <VerticalStackLayout>
        <Entry x:Name="StudentNameEntry" Placeholder="Enter Student Name" WidthRequest="300" />
        <Entry x:Name="StudentSurnameEntry" Placeholder="Enter Student Surname" WidthRequest="300" />
        <Picker x:Name="GenderPicker" Title="Select Gender" WidthRequest="300">
            <Picker.Items>
                <x:String>Male</x:String>
                <x:String>Female</x:String>
            </Picker.Items>
        </Picker>
        <Button Text="Save Student" Clicked="CreateStudentCommand" WidthRequest="300" />
        <Label x:Name="MessageLabel" />
    </VerticalStackLayout>
</ContentPage>